{
  "compilerOptions": {
    "noEmitOnError": true,
    "module": "ESNext",
    "target": "ES2017",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/*": ["./*"],
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules"]
}